<section class="article-edit">
  <article>
    <header>
      <h1 class="article-edit__title">
        {{model.id}}
        <button class="article-edit__delete" {{action 'delete'}}>Delete</button>
      </h1>
    </header>
    <section class="article-edit__body">
      {{textarea value=model.body placeholder='Body' rows="15" class="article-edit__body__input" }}
      <div class="article-edit__body__preview">
        {{format-markdown model.body}}
      </div>
    </section>
    <footer class="article-edit__controls">
      <button class="article-edit__save" {{action 'save'}}>Save</button>
    </footer>
  </article>
</section>
