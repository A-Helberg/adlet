{{auto-size-text-area}}
<header class="admin__heading">
  <h1>New Article</h1>
  <nav>
    <button class="admin__actions" {{action 'save'}}>Save</button>
    <button class="admin__actions" {{action 'delete'}}>Delete</button>
  </nav>
</header>

<section class="article-edit">
  <div class="article-edit__editor">
    {{input value=model.id placeholder="Article Title" class="article-edit__editor__name"}}
    {{textarea value=model.body placeholder='Body' rows="15" class="article-edit__editor__body" }}
  </div>

  <div class="article-edit__preview">
    <h1>{{model.id}}</h1>
    {{format-markdown model.body}}
  </div>
</section>
